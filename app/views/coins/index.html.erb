<h1>Listing Cryptos</h1>
<br/>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Current Price</th>
      <th>Total Value</th>
      <th>Cost per</th>
      <th>Amount owned</th>
    </tr>
  </thead>

  <tbody>
        <% @coins.each do |coin| %>
          <% if coin.user_id == current_user.id %>
            <% if coin.symbol %>
              <% coin.symbol = coin.symbol.upcase %>
            <% end %>
            <tr>
            <% for x in @lookup_coin %>
              <% if coin.symbol == x["symbol"]  %>
                    <td><%= link_to x["name"], coin %></td>
                    <td>$<%=x["price_usd"] %></td>
                    <td>$<%= x["price_usd"].to_d * coin.amount_owned  %></td>
              <% end %>
            <% end %>

        <td>$<%= coin.cost_per %></td>
        <td><%= coin.amount_owned %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coin', new_coin_path, class: "btn btn-default" %>
